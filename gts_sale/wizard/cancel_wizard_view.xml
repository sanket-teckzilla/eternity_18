<odoo>
     <record id="view_cancel_event_form" model="ir.ui.view">
        <field name="name">wizard.cancel.view</field>
        <field name="model">approval.cancel</field>
        <field name="arch" type="xml">
            <form string="Reject">
                <group>
                    <field name="reason_for_cancel" required="1"/>
                </group>

                <footer>
                    <button name="action_cancel_reason_apply" string="Submit"
                            colspan="1" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>