<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="stock_production_lot_inherit_form_no_create" model="ir.ui.view">
            <field name="name">stock.lot.inherit.view.form.no.create</field>
            <field name="model">stock.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="options">{'no_create':True, 'no_edit':True, 'no_open':False}</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
